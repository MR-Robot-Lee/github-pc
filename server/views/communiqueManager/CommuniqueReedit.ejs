<div style="padding: 20px 10px 10px 10px;border-bottom: 1px solid #e9e9e9" id="addCommunique" data-id="<%- id %>"
     class="communiqueDetail">
    <div class="modal-form">
        <div class="item" style="padding-bottom: 20px;">
            <label class=" label-block int-small8" style="color: #5b5b5b;"><i
                        class="icon-fill-in">*</i>栏目 : </label>
            <select style="color: #5b5b5b" class="int int-default int-middle26" id="communiqueType"></select>
        </div>
        <div class="item" style="padding-bottom: 20px;">
            <label class=" label-block int-small8" style="color: #5b5b5b;"><i
                        class="icon-fill-in">*</i>标题 : </label>
            <input style="color: #5b5b5b" type="text" class="int int-default int-large44" name="title" />
        </div>
        <div class="item" style="padding-bottom: 20px;">
            <label class=" label-block int-small8" style="color: #5b5b5b;"><i
                        class="icon-fill-in">*</i>接收人 : </label>
            <select style="color: #5b5b5b;" class="int int-default int-large44" disabled>
                <option value="a">全体成员</option>
            </select>
        </div>
        <div class="item" style="padding-bottom: 20px;">
            <label class=" label-block int-small8" style="float: left;color: #5b5b5b;"><i
                        class="icon-fill-in">*</i>公告内容 : </label>
            <textarea placeholder="请输入内容"
                      class="int int-default int-large44"
                      name="content"
                      style="height:270px;resize: none;margin-left: 4px;
                      padding: 5px;
                      line-height: 1.5;color: #5b5b5b"></textarea>
        </div>
        <div class="item" style="position: relative;padding-bottom: 20px;">
            <label class=" label-block int-small8" style="float: left;color:#5b5b5b;">
                <i class="icon-fill-in">*</i>附件 : </label>
            <div id="communiqueFile" style="display: inline-block;margin-left: 6px"></div>
        </div>
        <div class="item">
            <label class=" label-block int-small8" style="color: #5b5b5b;"><i class="icon-fill-in">*</i>其他设置 : </label>
            <label style="color: #999"><input type="checkbox" checked disabled />允许评论</label>
            <label style="color: #999"><input type="checkbox" checked disabled />允许下载</label>
        </div>
    </div>
</div>
<div style="padding-left: 370px;margin: 20px 0">
    <span class="span-btn span-btn-bc confirm-active" id="fbCommunique">发布</span>
    <span class="span-btn" id="reviewCommunique">预览</span>
    <!--<a class="span-btn span-btn-bc confirm-active" href="/communique/all">取消</a>-->
</div>