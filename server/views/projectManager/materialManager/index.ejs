<%- include('../../layout/projectHeader') %>
<div class='IndexMain container-project  page-material' id="projectSchedule"
     data-id="<%- id %>">
    <div class='project-menu-title'><span><%- name %></span>
        <div style="position: absolute;top: 5px;left: 25px;width: 36px;height: 36px;border-radius: 50%;box-shadow: 0px 0px 2px 1px #c1c1c1;background-color: #fff;"><img style="width: 28px;height: 25px;border-radius: 50%;margin-top: 6px;" name='projectPrincipalLogo' src="./../../../dist/images/my-apply.png" alt=""></div>
        <div id="projectPrincipal" style="position: absolute;top: 13px;left: 70px;font-size: 14px"></div>
    </div>
    <div class="container-content-project page-budget">
        <%- include('./../projectDetailManager/projectNav') %>
        <div class="project-list">
            <div class="budget-title">材料管理</div>
            <% if(type === 'project-material'){ %>
            <div class="material-manager-modal">
                <div class="material-section">
                    <div class="modal-form">
                        <label class="bold-title">
                            <i class="icon-fill-in">*</i>
                            采购计划命名:
                        </label>
                        <input type="text" class="int int-default int-middle26" placeholder="请输入新增材料名称" />
                    </div>
                    <div style="text-align: right;margin-top: 10px">
                        <span class="span-btn confirm">确认</span>
                        <span class="span-btn span-btn-bc confirm-active cancel">取消</span>
                    </div>
                </div>
                <div class="triangle-left bebebe"></div>
                <div class="triangle-left ffffff"></div>
            </div>
            <% } %>
            <div class="budget-menus">
                <% if(type === 'project-material'
                        || type === 'material-purchase-order'
                        || type === 'material-plan-order'
                        || type === 'material-check-order'
                        || type === 'material-cost-order'){ %>
                <a class="item active" href="/project/material/<%- id %>?name=<%- name %>">
                    <span class="menu-line"></span>
                    材料计划
                </a>
                <% }else{ %>
                <a class="item " href="/project/material/<%- id %>?name=<%- name %>">
                    <span class="menu-line"></span>
                    材料计划
                </a>
                <% } %>
                <!--<% if(type === 'material-plan'){ %>-->
                <!--<a class="item active" href="/project/material/plan/<%- id %>?name=<%- name %>">-->
                    <!--<span class="menu-line"></span>-->
                    <!--我的任务-->
                <!--</a>-->
                <!--<% }else{ %>-->
                <!--<a class="item" href="/project/material/plan/<%- id %>?name=<%- name %>">-->
                    <!--<span class="menu-line"></span>-->
                    <!--我的任务-->
                <!--</a>-->
                <!--<% } %>-->
                <% if(type === 'material-purchase'){ %>
                <a class="item active" href="/project/material/purchase/<%- id %>?name=<%- name %>">
                    <span class="menu-line"></span>
                    采购汇总
                </a>
                <% }else{ %>
                <a class="item" href="/project/material/purchase/<%- id %>?name=<%- name %>">
                    <span class="menu-line"></span>
                    采购汇总
                </a>
                <% } %>
                <% if(type === 'material-amount'){ %>
                <a class="item active" href="/project/material/amount/<%- id %>?name=<%- name %>">
                    <span class="menu-line"></span>
                    可计划量
                </a>
                <% }else{ %>
                <a class="item" href="/project/material/amount/<%- id %>?name=<%- name %>">
                    <span class="menu-line"></span>
                    可计划量
                </a>
                <% } %>
                <% if(type === 'material-summary'){ %>
                <a class="item active" href="/project/material/summary/<%- id %>?name=<%- name %>">
                    <span class="menu-line"></span>
                    库存量
                </a>
                <% }else{ %>
                <a class="item" href="/project/material/summary/<%- id %>?name=<%- name %>">
                    <span class="menu-line"></span>
                    库存量
                </a>
                <% } %>
            </div>
            <div class="project-list-wrap top-88">
                <% if(type === 'project-material'
                        || type === 'material-purchase-order'
                        || type === 'material-plan-order'
                        || type === 'material-check-order'
                        || type === 'material-cost-order'){ %>
                <%- include('./materialPlan') %>
                <% }else if(type === 'material-plan') { %>
                <%- include('./myTask') %>
                <% }else if(type === 'material-purchase'){ %>
                <%- include('./purchaseSum') %>
                <% }else if(type === 'material-amount'){ %>
                <%- include('./planAmount') %>
                <% } else if(type === 'material-summary'){ %>
                <%- include('./planSummary') %>
                <% } %>
            </div>
            <% if(type === 'project-material'){ %>
            <%- include('./materialPlanOrder') %>
            <%- include('./materialBiddingOrder') %>
            <% } %>
        </div>
    </div>
    <div class='model-wrap'></div>
</div>
<script type="text/javascript" src="/dist/project.js"></script>
<%- include('../../layout/footer') %>
