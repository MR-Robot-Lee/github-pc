<%- include('../../layout/header') %>
<div class="modal-employee-add row-material">
    <div class="material-header">
        <span>添加材料</span>
        <div class="material-handler-menus">
            <a class="del-row">删除行</a>
            <a class="add-row">增加行</a>
        </div>
        <span class="icon-close header-close"></span>
    </div>
    <div class="employee-select-section">
        <div class="common-header">
            <div class="search-form">
                <label>材料分类</label>
                <select>
                    <option>无缝钢管</option>
                </select>
                <button class="btn">确定</button>
            </div>
        </div>
        <div class="table-content row-material-section">
            <table>
                <thead>
                <tr>
                    <th class="border">选择</th>
                    <th class="border">序号</th>
                    <th class="border">材料名称</th>
                    <th class="border">规格型号</th>
                    <th class="border">单位</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td class="border"><input type="checkbox"/></td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="employee-footer">
        <span class="select-confirm">确认</span>
        <span class="select-cancel">取消</span>
    </div>
</div>