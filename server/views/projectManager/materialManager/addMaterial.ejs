                    <th class="border">规格型号</th>
                    <th class="border">单位</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td class="border"><input type="checkbox" /></td>
                    <td class="border"></td>
                    <td class="border"></td>
                    <td class="border"></td>
                    <td class="border"></td>
                    <td class="border"></td>
                    <td class="border"></td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="employee-footer">
        <span class="select-cancel">辅材费添加</span>
        <span class="select-confirm">预算外添加</span>
        <span class="select-cancel">取消</span>
    </div>
</div>